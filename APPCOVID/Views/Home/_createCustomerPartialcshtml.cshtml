@model  APPCOVID.Entity.ViewModels.RegisterInfoViewModel
<div class="card-body">
    <div class="row">
        <div class="col-lg-12">
            <div class="p-5">
                <span class="alert-danger">@ViewBag.ErrMsg</span>
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Create Customer Account!</h1>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <form class="user" asp-action="RegisterCustomer" asp-controller="Home">
                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <input asp-for="FullName" type="text" class="form-control form-control-user" id="exampleFirstName" placeholder="Full Name">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="Phone" type="text" class="form-control form-control-user" placeholder="Phone Number" maxlength="10">
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" type="email" class="form-control form-control-user" id="exampleInputEmail" placeholder="Email Address">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block">Create Customer Account</button>
                    <hr>
                </form>
            </div>
        </div>
       
    </div>
</div>